            <label for="username" class="form-label">Name</label>
          <input id="username" name="name" placeholder="enter name" type="text" class="form-control" value="<%=student.name%>" required/>
        </div>
      
        <div class="mb-3">
          <label for="username" class="form-label">Email</label>
          <input id="username" name="email" placeholder="enter email" type="email" class="form-control" value="<%=student.email%>" required/>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
            <label for="username" class="form-label">Active Status</label>
            <input id="username" name="isActive" placeholder="enter email" type="text" class="form-control" value="<%=student.isActive%>" required/>
